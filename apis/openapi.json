            "get": {
                "tags": [
                    "Files"
                ],
                "summary": "Lists files prefixed by given directory name",
                "parameters": [
                    {
                        "name": "directory",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "default": "/"
