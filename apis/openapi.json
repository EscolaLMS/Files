                    },
                    {
                        "name": "perPage",
                        "in": "query",
                        "schema": {
                            "type": "int",
                            "default": "50"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "name": {
